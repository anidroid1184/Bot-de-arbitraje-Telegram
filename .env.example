SMOKE_BETBURGER_NAV=base        # base | filters | bookmakers
SMOKE_BETBURGER_FILTER=         # si usas 'filters', pon el texto exacto del filtro
SMOKE_SUREBET_FILTER=

# ==== Bot ====
SCRAPING_INTERVAL=5             # segundos entre ciclos internos (si aplica)
MAX_RETRIES=3
ALERT_TIMEOUT=2                 # timeout envío Telegram (s)
TELEGRAM_MIN_INTERVAL_SEC=0.3

# ==== Logging ====
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# ==== Captura de red (filtros / muestreo / persistencia) ====
# Regex CSV para incluir/excluir URLs (case-insensitive). Si no se define INCLUDE,
# se usa el patrón por defecto interno (p.ej. /api/pro_search para Betburger).
# Ejemplos:
#  - Betburger: CAPTURE_INCLUDE="/api/(v\\d+/)?pro_search"
#  - Surebet:   CAPTURE_INCLUDE="/(valuebets|surebets|api)"
# Recomendado (dos regex, uno por plataforma):
CAPTURE_INCLUDE=/api/(v\d+/)?pro_search,/(valuebets|surebets)
CAPTURE_EXCLUDE=\.(png|jpg|svg|css|js)($|\?)

# Muestreo (0.0–1.0): 1.0 captura todo, 0.5 ~50% de eventos
CAPTURE_SAMPLE=1.0

# Protección de memoria (tamaño del buffer) y política de descarte
CAPTURE_MAX_BUFFER=1000
CAPTURE_DROP_POLICY=drop_oldest   # drop_oldest | drop_new

# Truncado de cuerpos de request/response (en caracteres)
CAPTURE_MAX_BODY_CHARS=2000

# Persistencia opcional en JSONL; si está vacío no se guarda. Rutas de ejemplo:
#  - ./data/capture/bb_pro_search.jsonl
#  - ./data/capture/sb_valuebets.jsonl
CAPTURE_JSONL_PATH=

# Campos a persistir (CSV). Por defecto se guarda el registro completo; define
# esto para limitar I/O. Ejemplo: "type,url,status"
CAPTURE_PERSIST_FIELDS=

# ==== Browser / Selenium ====
HEADLESS_MODE=true
BROWSER_TIMEOUT=120
FIREFOX_BINARY=
WEBDRIVER_REMOTE_URL=http://localhost:4444/wd/hub
BROWSER_DEBUG=0
BROWSER=firefox
REMOTE_BROWSER=firefox

# ==== Test seeding (opcional) ====
SEED_TEST_TABS=false
SEED_WAIT_SECONDS=0
TEST_BETBURGER_URL=https://betburger.com
TEST_SUREBET_URL=https://es.surebet.com/valuebets

# ==== Persistencia (snapshots) ====
SNAPSHOT_ENABLED=true           # activo para guardar HTML y JSON (tu requerimiento futuro)
SNAPSHOT_DIR=logs/html
SNAPSHOT_INTERVAL_SEC=60        # alineado a .env actual
SUREBET_SUMMARY_TOP=10          # cantidad de items en resumen (si lo usas)