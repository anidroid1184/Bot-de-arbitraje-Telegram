# ==== Persistent / Loop ====
RUN_FOREVER=true
POLL_INTERVAL_SEC=30     # iteración cada 30s

# ==== Proxy / Playwright ====
PROXY_POOL_FILE=
PLAYWRIGHT_ENGINE=chromium
BOT_HEADLESS=true               # en remoto, mantener true
SMOKE_PER_TAB=0                 # 1 para abrir una pestaña por contexto/proxy
PROXY_ALLOWED_SCHEMES=http,https  # opcional: filtra proxies por esquema (evitar socks5)
SMOKE_IDLE_SECONDS=60             # segundos a esperar mientras se capturan requests en el smoke
SMOKE_INCLUDE_SUREBET=0           # 1 para incluir prueba de Surebet en el smoke

# ==== Telegram ====
TELEGRAM_BOT_TOKEN=REEMPLAZA_CON_TU_TOKEN
TELEGRAM_SUPPORT_CHANNEL_ID=-1002922469529   # support.technical_alerts

# ==== Betburger ====
BETBURGER_USERNAME=REEMPLAZA_USER
BETBURGER_PASSWORD=REEMPLAZA_PASS
# Preferencia: BETBURGER_BASE; compatibilidad: BETBURGER_BASE_URL
BETBURGER_BASE=https://betburger.com
BETBURGER_BASE_URL=https://betburger.com
BETBURGER_LOGIN_URL=https://betburger.com/users/sign_in
BETBURGER_PATH=/es/arbs

# ==== Surebet ====
SUREBET_USERNAME=REEMPLAZA_USER
SUREBET_PASSWORD=REEMPLAZA_PASS
SUREBET_BASE_URL=https://es.surebet.com
SUREBET_LOGIN_URL=https://es.surebet.com/users/sign_in
SUREBET_VALUEBETS_URL=https://es.surebet.com/valuebets

# ==== Perfiles Surebet (3 pestañas) ====
SUREBET_TABS=3
SUREBET_TAB_1_PROFILE_KEY=ev-surebets
SUREBET_PROFILE_ev-surebets_FILTER=         # opcional: nombre visible de filtro en UI

SUREBET_TAB_2_PROFILE_KEY=filtro_1
SUREBET_PROFILE_filtro_1_FILTER=

SUREBET_TAB_3_PROFILE_KEY=filtro_2
SUREBET_PROFILE_filtro_2_FILTER=

# ==== Perfiles Betburger (6 pestañas) ====
BETBURGER_TABS=6
BETBURGER_TAB_1_PROFILE_KEY=bet365_valuebets
BETBURGER_PROFILE_bet365_valuebets_FILTER=   # opcional: nombre visible de filtro en UI

BETBURGER_TAB_2_PROFILE_KEY=winamax-valuebets
BETBURGER_PROFILE_winamax-valuebets_FILTER=

BETBURGER_TAB_3_PROFILE_KEY=codere_valuebets
BETBURGER_PROFILE_codere_valuebets_FILTER=

BETBURGER_TAB_4_PROFILE_KEY=retabet_valuebets
BETBURGER_PROFILE_retabet_valuebets_FILTER=

BETBURGER_TAB_5_PROFILE_KEY=winamax-bet365
BETBURGER_PROFILE_winamax-bet365_FILTER=

BETBURGER_TAB_6_PROFILE_KEY=filtro_6
BETBURGER_PROFILE_filtro_6_FILTER=

# ==== Smoke / Navegación asistida (opcional) ====
SMOKE_BETBURGER_NAV=base        # base | filters | bookmakers
SMOKE_BETBURGER_FILTER=         # si usas 'filters', pon el texto exacto del filtro
SMOKE_SUREBET_FILTER=

# ==== Bot ====
SCRAPING_INTERVAL=5             # segundos entre ciclos internos (si aplica)
MAX_RETRIES=3
ALERT_TIMEOUT=2                 # timeout envío Telegram (s)
TELEGRAM_MIN_INTERVAL_SEC=0.3

# ==== Logging ====
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# ==== Browser / Selenium ====
HEADLESS_MODE=true
BROWSER_TIMEOUT=120
FIREFOX_BINARY=
WEBDRIVER_REMOTE_URL=http://localhost:4444/wd/hub
BROWSER_DEBUG=0
BROWSER=firefox
REMOTE_BROWSER=firefox

# ==== Test seeding (opcional) ====
SEED_TEST_TABS=false
SEED_WAIT_SECONDS=0
TEST_BETBURGER_URL=https://betburger.com
TEST_SUREBET_URL=https://es.surebet.com/valuebets

# ==== Persistencia (snapshots) ====
SNAPSHOT_ENABLED=true           # activo para guardar HTML y JSON (tu requerimiento futuro)
SNAPSHOT_DIR=logs/html
SNAPSHOT_INTERVAL_SEC=60        # alineado a .env actual
SUREBET_SUMMARY_TOP=10          # cantidad de items en resumen (si lo usas)