# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_SUPPORT_CHANNEL_ID=your_support_channel_id

# Betburger Web Scraping Configuration
BETBURGER_USERNAME=your_betburger_username
BETBURGER_PASSWORD=your_betburger_password
BETBURGER_BASE_URL=https://betburger.com
BETBURGER_LOGIN_URL=https://betburger.com/users/sign_in

# Surebet Web Scraping Configuration  
SUREBET_USERNAME=your_surebet_username
SUREBET_PASSWORD=your_surebet_password
SUREBET_BASE_URL=https://es.surebet.com
SUREBET_LOGIN_URL=https://es.surebet.com/users/sign_in
SUREBET_VALUEBETS_URL=https://es.surebet.com/valuebets

# Bot Configuration
SCRAPING_INTERVAL=5  # seconds between scraping cycles
MAX_RETRIES=3
ALERT_TIMEOUT=2  # max seconds for alert delivery

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# Browser Configuration
HEADLESS_MODE=false  # set to true for production
BROWSER_TIMEOUT=30

# Optional: Remote WebDriver (e.g., Selenium Standalone Firefox in Docker)
# If set, TabManager will connect to this endpoint instead of local Firefox
# Example: http://localhost:4444/wd/hub
WEBDRIVER_REMOTE_URL=http://localhost:4444/wd/hub

# Optional: Browser proxy configuration (HTTP or SOCKS5)
# Uncomment and complete if you need to route browser traffic via a proxy
# BROWSER_PROXY_TYPE=http        # http | socks | socks5
# BROWSER_PROXY_HOST=127.0.0.1
# BROWSER_PROXY_PORT=8080
# BROWSER_PROXY_USERNAME=
# BROWSER_PROXY_PASSWORD=

# Test seeding (test_tab_connection.py)
# Automatically open Betburger and Surebet and wait for manual GUI interaction
SEED_TEST_TABS=true
SEED_WAIT_SECONDS=300
TEST_BETBURGER_URL=https://betburger.com
TEST_SUREBET_URL=https://es.surebet.com

# Smoke Navigation (controlled flows in smoke_login_and_scrape.py)
# Betburger: choose where to navigate after login. Options: base | filters | bookmakers
SMOKE_BETBURGER_NAV=base
# Betburger: optional filter name or numeric id to open inside Filters
SMOKE_BETBURGER_FILTER=
# Surebet: optional saved filter name (visible text in the UI) to apply after opening Valuebets
SMOKE_SUREBET_FILTER=
